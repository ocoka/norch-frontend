size=50px
sizes(s)
  width s
  height s

.uploader
  sizes size
  margin 0 auto
  position relative
  top 50%
  transform translateY(-50%)
  background-color #909090
  border-radius  100%
  transition-property  width,height,background-color
  transition-duration 0.3s
  text-align center
  color lighten(@background-color,30%)

  &_drag_enter
    sizes size*2
    background-color #558955
    color lighten(@background-color,30%)
    &.uploader:after
      font-size (size*2 - 10px)


  &:after
    transition: font-size 0.3s;
    content 'â‡ª'
    vertical-align middle
    font-weight 100
    font-size (size - 10px)


  &:before
    content ' '
    vertical-align middle
    font-size 1px
    height 100%
    display inline-block
    width 0
    padding 0
    margin 0
    line-height 0
